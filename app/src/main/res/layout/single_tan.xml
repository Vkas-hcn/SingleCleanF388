<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:id="@+id/scroll_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_cpu_header">

            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:contentDescription="@string/app_name"
                android:src="@drawable/icon_back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="16dp"
                android:text="CPU"
                android:textColor="#FFFFFFFF"
                android:textSize="15sp"
                app:layout_constraintBottom_toBottomOf="@id/btn_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@id/btn_back" />

            <View
                android:id="@+id/view_line"
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_marginHorizontal="24dp"
                android:layout_marginTop="20dp"
                android:background="#33FCFAFF"
                app:layout_constraintTop_toBottomOf="@+id/tv_title" />

            <LinearLayout
                android:id="@+id/layout_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:paddingStart="24dp"
                android:paddingTop="32dp"
                android:paddingEnd="24dp"
                android:paddingBottom="32dp"
                app:layout_constraintTop_toBottomOf="@+id/view_line">

                <ImageView
                    android:id="@+id/iv_cpu_icon"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/end_cpu" />

                <TextView
                    android:id="@+id/tv_cpu_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:text="-"
                    android:gravity="center"
                    android:textColor="@android:color/white"
                    android:textSize="16sp"
                    android:textStyle="bold" />
            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <LinearLayout
            android:id="@+id/layout_info"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:layout_marginTop="24dp"
            android:background="@drawable/bg_cpu_info_card"
            android:orientation="vertical"
            android:padding="2dp"
            android:clipToPadding="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:background="#E9EEF8">

                <include
                    android:id="@+id/row_cpu"
                    layout="@layout/view_cpu_info_row"
                    android:tag="CPU" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:background="#DBE1EF">

                <include
                    android:id="@+id/row_vendor"
                    layout="@layout/view_cpu_info_row"
                    android:tag="Vendor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:background="#E9EEF8">

                <include
                    android:id="@+id/row_cores"
                    layout="@layout/view_cpu_info_row"
                    android:tag="Cores" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:background="#DBE1EF">

                <include
                    android:id="@+id/row_big_little"
                    layout="@layout/view_cpu_info_row"
                    android:tag="big.LITTLE" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:background="#E9EEF8">

                <include
                    android:id="@+id/row_clusters"
                    layout="@layout/view_cpu_info_row"
                    android:tag="Clusters" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:background="#DBE1EF">

                <include
                    android:id="@+id/row_family"
                    layout="@layout/view_cpu_info_row"
                    android:tag="Family" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:background="#E9EEF8">

                <include
                    android:id="@+id/row_mode"
                    layout="@layout/view_cpu_info_row"
                    android:tag="Mode" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:background="#DBE1EF">

                <include
                    android:id="@+id/row_machine"
                    layout="@layout/view_cpu_info_row"
                    android:tag="Machine" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:background="#E9EEF8">

                <include
                    android:id="@+id/row_abi"
                    layout="@layout/view_cpu_info_row"
                    android:tag="ABI" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:background="#DBE1EF">

                <include
                    android:id="@+id/row_instructions"
                    layout="@layout/view_cpu_info_row"
                    android:tag="Instructions" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:background="#E9EEF8">

                <include
                    android:id="@+id/row_process_tech"
                    layout="@layout/view_cpu_info_row"
                    android:tag="Process Technology" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:background="#DBE1EF">

                <include
                    android:id="@+id/row_manufacturing"
                    layout="@layout/view_cpu_info_row"
                    android:tag="Manufacturing" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:background="#E9EEF8">

                <include
                    android:id="@+id/row_revision"
                    layout="@layout/view_cpu_info_row"
                    android:tag="Revision" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:background="#DBE1EF">

                <include
                    android:id="@+id/row_clock_speed"
                    layout="@layout/view_cpu_info_row"
                    android:tag="Clock Speed" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:background="#E9EEF8">

                <include
                    android:id="@+id/row_governor"
                    layout="@layout/view_cpu_info_row"
                    android:tag="Governor" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:background="#DBE1EF">

                <include
                    android:id="@+id/row_supported_abi"
                    layout="@layout/view_cpu_info_row"
                    android:tag="Supported ABI" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="24dp"
                android:background="#E9EEF8">

                <include
                    android:id="@+id/row_gpu"
                    layout="@layout/view_cpu_info_row"
                    android:tag="GPU" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </ScrollView>

    <include
        android:id="@+id/in_scan"
        layout="@layout/in_scan" />
</FrameLayout>

